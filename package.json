{
	"name": "sao-geraldo-forms-lambda",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"build": "tsup",
		"dev": "tsx --watch -r dotenv/config index.ts",
		"package": "pnpm run build && cd dist && zip -r ../lambda.zip index.js templates/ && cd ..",
		"deploy": "pnpm run package && aws lambda update-function-code --function-name brevoMailService --zip-file fileb://lambda.zip"
	},
