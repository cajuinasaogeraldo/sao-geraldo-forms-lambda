		"@types/aws-lambda": "^8.10.159",
		"@types/cors": "^2.8.19",
		"@types/dotenv": "^8.2.3",
		"@types/express": "^5.0.6",
		"@types/node": "^24.10.1",
		"pino-pretty": "^13.1.3",
		"serverless": "^4.27.1",
		"tsup": "^8.5.1",
		"tsx": "^4.21.0",
		"typescript": "^5.5.2"
	},
	"dependencies": {
		"@getbrevo/brevo": "^3.0.1",
		"@types/multer": "^2.0.0",
		"cors": "^2.8.5",
		"date-fns": "^4.1.0",
		"dotenv": "^17.2.3",
		"express": "^5.2.1",
		"handlebars": "^4.7.8",
		"helmet": "^8.1.0",
		"multer": "^2.0.2",
		"pino": "^10.1.0",
		"serverless-http": "^4.0.0",
		"zod": "^4.1.13"
	}
